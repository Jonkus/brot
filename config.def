# This directory is the target-directory for your Blog. It will contain
#  the html-files and resources. For example your web-server
#  DEPLOYMENT_DIR="/srv/www/myblog"
DEPLOYMENT_DIR="/tmp/http"

# This directory is the target-directory for your Blog. It will contain
#  the html-files and resources. For example your web-server
#  DEPLOYMENT_DIR="/srv/www/myblog"
PRIVATE_DEPLOYMENT_DIR="/tmp/private"

# This directory is used for git checkout and contains the plain
#  markdown files. So you can decide, whether you want to make them
#  public available or even non-permanent in your /tmp/, its all about
#  your choice
#  DEPLOYMENT_DIR="/srv/ftp/myblog"
WORKNBUILD_DIR="/tmp/build"

# This is the most important directory. It contains the bare-repository
#  of your blog. Don't loose it!
#  REPOSITORY_DIR="/home/user/repos/myblog"
REPOSITORY_DIR="/tmp/repo"

# create new directories, if needed
test -d $DEPLOYMENT_DIR || mkdir $DEPLOYMENT_DIR || { echo "Could not create $DEPLOYMENT_DIR"; exit 2; }
test -d $WORKNBUILD_DIR || mkdir $WORKNBUILD_DIR || { echo "Could not create $WORKNBUILD_DIR"; exit 3; }
test -d $REPOSITORY_DIR || mkdir $REPOSITORY_DIR || { echo "Could not create $REPOSITORY_DIR"; exit 4; }
test -d $PRIVATE_DEPLOYMENT_DIR || mkdir $PRIVATE_DEPLOYMENT_DIR || { echo "Could not create $PRIVATE_DEPLOYMENT_DIR"; exit 2; }
